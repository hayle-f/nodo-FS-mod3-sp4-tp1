  <div class="container">
    <h2><%= superheroe.nombreSuperheroe %></h2>

    <dl>
      <dt>Nombre Real:</dt>
      <dd><%= superheroe.nombreReal || '-' %></dd>

      <dt>Edad:</dt>
      <dd><%= superheroe.edad || '-' %></dd>

      <dt>Planeta de Origen:</dt>
      <dd><%= superheroe.planetaOrigen || '-' %></dd>

      <dt>Debilidad:</dt>
      <dd><%= superheroe.debilidad || '-' %></dd>

      <dt>Poderes:</dt>
      <dd><%= superheroe.poderes?.join(', ') || '-' %></dd>

      <dt>Habilidad Especial:</dt>
      <dd><%= superheroe.habilidadEspecial || '-' %></dd>

      <dt>Aliados:</dt>
      <dd><%= superheroe.aliados?.join(', ') || '-' %></dd>

      <dt>Enemigos:</dt>
      <dd><%= superheroe.enemigos?.join(', ') || '-' %></dd>
    </dl>

    <div class="acciones-detalle">
      <a href="/api/heroes" class="button cancelar">Cancelar</a>
      <form class="form-simple" action="/api/heroes/<%= superheroe._id %>?_method=DELETE" method="POST">
        <button type="submit" class="button eliminar">Confirmar eliminaci√≥n</button>
      </form>
    </div>
  </div>

