<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Superhéroes</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>

  <!-- Espacio reservado para mensajes -->
  <div id="mensaje-exito-container">
    <% if (exito === 'creado') { %>
      <p class="mensaje-exito">✅ Superhéroe creado con éxito.</p>
    <% } else if (exito === 'editado') { %>
      <p class="mensaje-exito">✅ Superhéroe editado con éxito.</p>
    <% } else if (exito === 'eliminado') { %>
      <p class="mensaje-exito">✅ Superhéroe eliminado con éxito.</p>
    <% } %>
  </div>

  <h1>Listado de Superhéroes</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Nombre real</th>
        <th>Edad</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% superheroes.forEach(superheroe => { %>
        <tr>
          <td><%= superheroe.nombreSuperheroe %></td>
          <td><%= superheroe.nombreReal || '-' %></td>
          <td><%= superheroe.edad || '-' %></td>
          <td class="acciones">
            <a href="/api/heroes/<%= superheroe._id %>" title="Ver detalles" class="icono info">➕</a>
            <a href="/api/heroes/editar/<%= superheroe._id %>" title="Editar" class="icono editar">✏️</a>
            <a href="/api/heroes/<%= superheroe._id %>/confirmar-eliminacion" title="Eliminar" class="icono eliminar">🗑️</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/api/heroes/crear" class="button">Crear Nuevo Superhéroe</a>

  <script>
  setTimeout(() => {
    const mensaje = document.querySelector('.mensaje-exito');
    if (mensaje) mensaje.classList.add('oculto');
  }, 1500);
</script>


</body>
</html>
