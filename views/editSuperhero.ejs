  <div class="container">
    <h2>Editar Superhéroe</h2>

    <% if (errores && errores.length > 0) { %>
      <div class="mensaje-error">
        <ul>
          <% errores.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form class="form-card" action="/api/heroes/editar/<%= superheroe._id %>?_method=PUT" method="POST">

      <div class="form-group">
        <label for="nombreSuperheroe">Nombre del Superhéroe:</label>
        <input type="text" id="nombreSuperheroe" name="nombreSuperheroe" value="<%= superheroe.nombreSuperheroe %>" />
      </div>

      <div class="form-group">
        <label for="nombreReal">Nombre Real:</label>
        <input type="text" id="nombreReal" name="nombreReal" value="<%= superheroe.nombreReal %>" />
      </div>

      <div class="form-group">
        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="edad" value="<%= superheroe.edad %>" />
      </div>

      <div class="form-group">
        <label for="planetaOrigen">Planeta de Origen:</label>
        <input type="text" id="planetaOrigen" name="planetaOrigen" value="<%= superheroe.planetaOrigen %>" />
      </div>

      <div class="form-group">
        <label for="debilidad">Debilidad:</label>
        <input type="text" id="debilidad" name="debilidad" value="<%= superheroe.debilidad %>" />
      </div>

      <div class="form-group">
        <label for="poderes">Poderes:</label>
        <textarea id="poderes" name="poderes" rows="3"><%= superheroe.poderes %></textarea>
      </div>

      <div class="form-group">
        <label for="habilidadEspecial">Habilidad Especial:</label>
        <input type="text" id="habilidadEspecial" name="habilidadEspecial" value="<%= superheroe.habilidadEspecial %>" />
      </div>

      <div class="form-group">
        <label for="aliados">Aliados:</label>
        <input type="text" id="aliados" name="aliados" value="<%= superheroe.aliados %>" />
      </div>

      <div class="form-group">
        <label for="enemigos">Enemigos:</label>
        <input type="text" id="enemigos" name="enemigos" value="<%= superheroe.enemigos %>" />
      </div>

      <div class="buttons">
        <button type="button" class="button cancelar" onclick="window.location.href='/api/heroes'">Cancelar</button>
        <button type="submit" class="button">Modificar</button>
      </div>
    </form>
  </div>

